<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.bank.admin.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>com.bank.admin.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/DeleteCustomerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyCustomerServlet</servlet-name>
        <servlet-class>com.bank.admin.ModifyCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyCustomerServlet</servlet-name>
        <url-pattern>/ModifyCustomerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <servlet-class>com.bank.admin.RegisterCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <url-pattern>/RegisterCustomerServlet</url-pattern>
    </servlet-mapping>

    <!-- Customer Servlets -->
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>com.bank.customer.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/CustomerLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <servlet-class>com.bank.customer.CustomerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <url-pattern>/CustomerDashboardServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.bank.customer.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/ChangePasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransferFundsServlet</servlet-name>
        <servlet-class>com.bank.customer.TransferFundsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferFundsServlet</servlet-name>
        <url-pattern>/TransferFundsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepositFundsServlet</servlet-name>
        <servlet-class>com.bank.customer.DepositFundsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepositFundsServlet</servlet-name>
        <url-pattern>/DepositFundsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WithdrawFundsServlet</servlet-name>
        <servlet-class>com.bank.customer.WithdrawFundsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WithdrawFundsServlet</servlet-name>
        <url-pattern>/WithdrawFundsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAccountDetailsServlet</servlet-name>
        <servlet-class>com.bank.customer.ViewAccountDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAccountDetailsServlet</servlet-name>
        <url-pattern>/ViewAccountDetailsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerTransactionServlet</servlet-name>
        <servlet-class>com.bank.customer.CustomerTransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerTransactionServlet</servlet-name>
        <url-pattern>/CustomerTransactionServlet</url-pattern>
    </servlet-mapping>

    <!-- JSP Pages -->
    <welcome-file-list>
        <welcome-file>customerLogin.jsp</welcome-file>
    </welcome-file-list>

</web-app>
